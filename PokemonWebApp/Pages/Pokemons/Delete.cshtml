@page
@model PokemonWebApp.Pages.Pokemons.DeleteModel
@{
}
<div class="container">
   
        <h3> Você deseja realmente deletar o pokemon <b><font color="red"> @Html.DisplayFor(model => model.Pokemon.Nome) </font></b> ?</h3>
        <hr>
    
    <form method="post"> <!-- insere formulário com o método post -->
        <div class="row">
            <input type="hidden" asp-for="Pokemon.ID"> <!-- insere um campo oculto para receber o ID do Pokemon -->
            <div class="col-md-6">
                <input type="Submit" value="Confimar" class="btn btn-outline-danger"> <!-- insere um botão SUBMIT para encaminhar os dados do form via POST-->
            </div>
            <div class="col-md-6">
                <input type="button" class="btn btn-outline-primary" value="Cancelar" onClick="history.go(-1)">
            </div>
        </div>
    </form>
</div>
    
